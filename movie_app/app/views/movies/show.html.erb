<%= link_to 'All movies', movies_path %>


<h1>Movie</h1>


<div class="media">
  <!-- image -->

  <%= image_tag(@movie.image_url, alt: @movie.title)  %>

  <div class="media-body">
    <h5 class="mt-0"></h5>

    <ul>
      <li>Director: <%= @movie.director %></li>
      <li>Runtime: <%= @movie.runtime_in_minutes %></li>
      <li>Release Date: @movie.release_date</li>
      <li>Description: @movie.description</li>
    </ul>
  </div>
</div>

<h3>Add Review</h3>

<%= form_with model: [@movie, @review] do |f| %>

<div class="form-group">
<%= f.label :rating %>
<%= f.text_field :rating %>
</div>

<div class="form-group">
<%= f.label :comment %>
<%= f.text_field :comment %>

</div>
<%= f.submit "Add Review" %>

<% end %>

<h3>Reviews</h3>



<%= render @reviews %>
